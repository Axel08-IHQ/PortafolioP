---
import Layout from '../layouts/Layout.astro';
import Project from "../components/Project.astro";
import Sidebar from "../components/Sidebar.astro";
const projects = [
  {
    title: "Proyectos DevOps",
    desc: [
      "Infraestructura y automatización",
      "Próximamente más proyectos desde GitHub"
    ],
    tech: ["Docker", "Kubernetes", "AWS", "Azure", "Terraform"]
  }
];
---

<Layout title="DevOps | Axel Huera" description="Proyectos de infraestructura, cloud y DevOps">
  <div class="content">
    <Sidebar selectedItem="devops" />
    <main class="main">
      <div class="container">
        <div class="back-nav-container">
          <a href="/" class="back-nav-button">
            <img src="/assets/back.svg" loading="lazy" alt="Volver" class="back-nav-img" />
            <span>Volver</span>
          </a>
        </div>
        <div class="content-container">
          <h1>DevOps</h1>
          <div class="items-container">
            <div class="resource-items">
              {projects.map(project => (
                <Project 
                  title={project.title} 
                  desc={project.desc}
                  tech={project.tech}
                />
              ))}
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>
