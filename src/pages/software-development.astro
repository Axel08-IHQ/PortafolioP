---
import Layout from '../layouts/Layout.astro';
import Project from "../components/Project.astro";
import Sidebar from "../components/Sidebar.astro";
const baseUrl = import.meta.env.BASE_URL;
const projects = [
  {
    title: "Proyectos de Desarrollo",
    desc: [
      "Proyectos de desarrollo web y aplicaciones",
      "Desarrollados con tecnologías modernas",
      "Próximamente más proyectos desde GitHub"
    ],
    tech: ["React", "Node.js", "MongoDB", "JavaScript", "TypeScript"]
  }
];
---

<Layout title="Desarrollo Software | Axel Huera" description="Proyectos de desarrollo frontend y backend">
  <div class="content">
    <Sidebar selectedItem="software-development" />
    <main class="main">
      <div class="container">
        <div class="back-nav-container">
          <a href={baseUrl} class="back-nav-button">
            <img src={`${baseUrl}assets/back.svg`} loading="lazy" alt="Volver" class="back-nav-img" />
            <span>Volver</span>
          </a>
        </div>
        <div class="content-container">
          <h1>Desarrollo Software</h1>
          <div class="items-container">
            <div class="resource-items">
              {projects.map(project => (
                <Project 
                  title={project.title} 
                  desc={project.desc}
                  tech={project.tech}
                />
              ))}
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>
