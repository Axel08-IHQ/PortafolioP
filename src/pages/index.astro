---
import Layout from '../layouts/Layout.astro';
import Sidebar from "../components/Sidebar.astro";
---

<Layout title="Axel Huera - Ingeniero en Software" description="Portfolio de Axel Huera, Ingeniero en Software especializado en desarrollo web y DevOps">
  <div class="content">
    <Sidebar selectedItem="home" />
    <main class="main">
      <div class="container">
        <div class="fold-content-container">
          <div class="fold-content">
            <div class="badge">Ingeniero en Software</div>
            <h1>¡Hola! Soy <span class="text-gradient">Axel Huera</span>.<br />Desarrollador enfocado en innovación.</h1>
            <p class="lead">
              Especializado en desarrollo web, análisis funcional y DevOps. Apasionado por la resolución creativa de problemas y la mejora continua de procesos tecnológicos.
            </p>
          </div>
          <div class="hero-actions">
            <a href="mailto:axelhuera168@gmail.com" class="button button-primary">Contáctame</a>
            <a href="/personal-projects" class="button button-outline">Ver Proyectos</a>
          </div>
        </div>

        <div class="projects-section">
          <h2 class="section-title">Especialidades</h2>
          <div class="projects-grid">
            <a href="/software-development" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container">
                  <img src="./assets/browser.svg" loading="lazy" alt="Frontend" class="projects-category-image" />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>Desarrollo Frontend</h4>
                <div class="tech-tools-container">
                  <div class="chips-container">
                    <span class="single-chip">React</span>
                    <span class="single-chip">Vite</span>
                    <span class="single-chip">Astro</span>
                    <span class="single-chip">JS/TS</span>
                  </div>
                </div>
              </div>
            </a>
            
            <a href="/personal-projects" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container">
                  <img src="./assets/database.svg" loading="lazy" alt="Backend" class="projects-category-image" />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>Desarrollo Backend</h4>
                <div class="tech-tools-container">
                  <div class="chips-container">
                    <span class="single-chip">Node.js</span>
                    <span class="single-chip">PHP</span>
                    <span class="single-chip">Python</span>
                    <span class="single-chip">SQL</span>
                  </div>
                </div>
              </div>
            </a>

            <a href="/devops" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container">
                  <img src="./assets/code.svg" loading="lazy" alt="DevOps" class="projects-category-image" />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>DevOps & Cloud</h4>
                <div class="tech-tools-container">
                  <div class="chips-container">
                    <span class="single-chip">Docker</span>
                    <span class="single-chip">Linux</span>
                    <span class="single-chip">CI/CD</span>
                    <span class="single-chip">Scripting</span>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>